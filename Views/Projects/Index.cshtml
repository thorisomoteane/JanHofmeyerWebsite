@model List<JanHofmeyerWebsite.Models.Project>
@{
    ViewData["Title"] = "Projects";
}

<div class="projects-header" style="background: linear-gradient(135deg, #0891b2 0%, #06b6d4 100%); color: white; padding: 60px 0;">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Our Projects & Programs</h1>
        <p class="lead">Discover how we're creating positive change through targeted programs that address the real needs of our community.</p>
    </div>
</div>

<div class="container my-5">
    <!-- Filter Buttons -->
    <div class="text-center mb-4">
        <button class="btn btn-outline-info me-2 filter-btn active" data-filter="all">All</button>
        <button class="btn btn-outline-info me-2 filter-btn" data-filter="Active">Active</button>
        <button class="btn btn-outline-info me-2 filter-btn" data-filter="Planning">Planning</button>
    </div>

    <div class="row" id="projects-container">
        @foreach (var project in Model)
        {
            <div class="col-md-6 mb-4 project-item" data-status="@project.Status" data-theme="@project.Theme">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(project.ImageUrl))
                    {
                        <img src="@project.ImageUrl" class="card-img-top" alt="@project.Title" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-success">@project.Status</span>
                            <span class="badge bg-info">@project.Theme</span>
                        </div>
                        <h4 class="card-title">@project.Title</h4>
                        <p class="card-text">@project.ShortSummary</p>

                        <div class="mt-3">
                            <p class="mb-2"><strong>Impact:</strong></p>
                            <p class="text-success"><i class="fas fa-users"></i> @(project.PeopleImpacted ?? 0)+ people</p>
                        </div>

                        <div class="mt-3">
                            <p class="mb-2"><strong>About:</strong></p>
                            <p>@project.AboutSection</p>
                        </div>

                        @if (!string.IsNullOrEmpty(project.KeyGoals))
                        {
                            <div class="mt-3">
                                <p class="mb-2"><strong>Key Goals:</strong></p>
                                <ul class="list-unstyled">
                                    @foreach (var goal in project.KeyGoals.Split('|'))
                                    {
                                        <li><i class="fas fa-check text-success"></i> @goal</li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <p class="text-muted">No projects available at the moment.</p>
        </div>
    }
</div>

<div class="bg-light py-5">
    <div class="container text-center">
        <h3 class="mb-4">Get Involved</h3>
        <p class="mb-4">Want to support our projects or get involved? There are many ways you can help make a difference in your community.</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/Contact" class="btn btn-info btn-lg">Support Our Projects</a>
            <a href="/Contact" class="btn btn-outline-info btn-lg">Volunteer With Us</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                const filter = this.getAttribute('data-filter');
                document.querySelectorAll('.project-item').forEach(item => {
                    if (filter === 'all' || item.getAttribute('data-status') === filter) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        });
    </script>
}